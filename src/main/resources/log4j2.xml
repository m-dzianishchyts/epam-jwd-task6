<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="consoleAppender" target="SYSTEM_OUT">
            <PatternLayout disableAnsi="false">
                <Pattern>%highlight{[%d{HH:mm:ss.SSS} %5level]}: %logger[%t] - %msg%n%ex</Pattern>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="consoleAppender"/>
        </Root>
    </Loggers>
</Configuration>